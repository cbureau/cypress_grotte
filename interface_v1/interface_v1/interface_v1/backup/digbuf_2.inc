DigBuf_2_INT_REG:                          equ 0x0e1
DigBuf_2_INT_MASK:                         equ 0x02


;--------------------------------------------------
; Register Address Constants for DigBuf_2
;--------------------------------------------------

DigBuf_2_DATA_0_REG:                   equ 0x24   ; DR0 register
DigBuf_2_DATA_1_REG:                   equ 0x25   ; DR1 register
DigBuf_2_DATA_2_REG:                   equ 0x26   ; DR2 register
DigBuf_2_CONTROL_REG:                  equ 0x27   ; Control register
DigBuf_2_FUNC_REG:                     equ 0x24   ; Function register
DigBuf_2_INPUT_REG:                    equ 0x25   ; Input register
DigBuf_2_OUTPUT_REG:                   equ 0x26   ; Output register


;--------------------------------------------------
; DigBuf_2 Macro 'Functions'
;--------------------------------------------------

   macro DigBuf_2_Start_M
   or    reg[DigBuf_2_CONTROL_REG],  DigBuf_2_CONTROL_REG_START_BIT
   endm

   macro DigBuf_2_Stop_M
   and   reg[DigBuf_2_CONTROL_REG], ~DigBuf_2_CONTROL_REG_START_BIT
   endm

   macro DigBuf_2_EnableInt_M
   M8C_EnableIntMask DigBuf_2_INT_REG, DigBuf_2_INT_MASK
   endm

   macro DigBuf_2_DisableInt_M
   M8C_DisableIntMask DigBuf_2_INT_REG, DigBuf_2_INT_MASK
   endm


